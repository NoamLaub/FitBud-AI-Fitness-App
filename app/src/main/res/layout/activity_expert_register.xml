<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fitbud_bg"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/expertRegisterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expert Registration"
            android:textSize="26sp"
            android:textColor="@color/fitbud_primary"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/expertNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:textColor="#222222"
            android:textColorHint="#888888"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/expertSurnameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:textColor="#222222"
            android:textColorHint="#888888"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/expertEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#222222"
            android:textColorHint="#888888"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/expertPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#222222"
            android:textColorHint="#888888"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/expertRegisterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register as Expert"
            android:textColor="@color/white"
            android:background="@drawable/fitbud_button_bg"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/expertRegisterErrorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#D32F2F"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>
